<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="5dp"

    tools:context=".ChildCareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent: " />

        <TextView
            android:id="@+id/tv_email_parent"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Parent name "
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_exit_child"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_login"
            android:textColor="@color/white"
            android:padding="5dp"
            android:text="Exit Child " />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/textView21"
        style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:padding="5dp"
        android:text="Morning" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sp_morning_meal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Entry Meal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/tv_morning_meal"
            style="?android:textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Meal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sp_morning_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entry Temp"
            />

        <Button
            android:id="@+id/tv_morning_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="?android:textAppearanceButton"
            android:text="Temp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            style="?android:textAppearanceLarge"
            android:text="Noon"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/sp_noon_meal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Entry Meal"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/tv_noon_meal"
            style="?android:textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Meal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/sp_noon_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entry Temp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/tv_noon_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="?android:textAppearanceButton"
            android:text="Temp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="Night" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sp_night_meal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Entry Meal"/>

        <Button
            android:id="@+id/tv_night_meal"
            style="?android:textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Meal" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/sp_night_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entry Temp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/tv_night_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="?android:textAppearanceButton"
            android:text="Temp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/sp_health_child"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Entry Health"
            android:layout_marginRight="7dp"/>

        <EditText
            android:id="@+id/sp_mode_child"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Entry Mode"
            android:layout_marginRight="7dp"/>

        <Button
            android:id="@+id/btn_update_child"
            style="?android:textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_login"
            android:padding="10dp"
            android:text="Submit"
             />
    </LinearLayout>




</LinearLayout>
