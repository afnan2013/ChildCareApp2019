<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context=".DisplayChildProfileActivity">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_user_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:contentDescription=""
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:hint="Username"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:layout_below="@+id/img_user_profile"
        android:layout_alignParentStart="true" />




    <EditText
        android:id="@+id/et_useremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:hint="Email ID"
        android:layout_marginBottom="25dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:layout_below="@+id/et_username"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/btn_update_user"
        style="?android:textAppearanceSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/btn_login"
        android:text="Update"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@+id/et_useremail"
        android:layout_alignStart="@+id/btn_delete_user" />

    <Button
        android:id="@+id/btn_delete_user"
        style="?android:textAppearanceLarge"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@color/btn_login"
        android:textColor="@android:color/holo_red_light"
        android:text="DELETE"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/btn_update_user"
        android:layout_alignEnd="@+id/img_user_profile"
        android:layout_marginTop="25dp" />

    <!-- Link to Login Screen -->



</RelativeLayout>