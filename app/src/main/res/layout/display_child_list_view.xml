<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:id="@+id/child_list_handling_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_child_fullname"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="Full Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_entry_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/tv_child_id"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="6:12 pm" />

        <TextView
            android:id="@+id/entry_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/tv_entry_time"
            android:gravity="center"
            android:text="Entry Time :" />


        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="undefined" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/entry_text"
            android:layout_toLeftOf="@+id/tv_left_time"
            android:gravity="center"
            android:text="Left Time :" />

        <ImageView
            android:id="@+id/img_status_child"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_online" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Status"
            android:layout_alignBottom="@+id/img_status_child"
            android:layout_toEndOf="@+id/img_status_child" />


    </RelativeLayout>

</android.support.v7.widget.CardView>