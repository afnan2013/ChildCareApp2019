<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/childname"
        style="?android:textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not INCARE" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status : " />

        <ImageView
            android:id="@+id/img_status_child"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_online"
            android:layout_weight="0.04"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health : " />

        <TextView
            android:id="@+id/text_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode : " />
        <TextView
            android:id="@+id/text_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/textView21"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:padding="5dp"
            android:text="Morning" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:id="@+id/sp_morning_meal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Entry Meal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/tv_morning_meal"
            style="?android:textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Meal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:id="@+id/sp_morning_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entry Temp"
            />

        <Button
            android:id="@+id/tv_morning_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="?android:textAppearanceButton"
            android:text="Temp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            style="?android:textAppearanceLarge"
            android:text="Noon"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:id="@+id/sp_noon_meal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Entry Meal"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/tv_noon_meal"
            style="?android:textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Meal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:id="@+id/sp_noon_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entry Temp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/tv_noon_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="?android:textAppearanceButton"
            android:text="Temp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                style="?android:textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:text="Night" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:textSize="20dp"
            android:id="@+id/sp_night_meal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Entry Meal"/>

        <Button
            android:id="@+id/tv_night_meal"
            style="?android:textAppearanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Meal" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:id="@+id/sp_night_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Entry Temp"/>

        <Button
            android:id="@+id/tv_night_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="?android:textAppearanceButton"
            android:text="Temp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>